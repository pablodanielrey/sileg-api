    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: File",
            "type": "python",
            "request": "launch",
            "program":"${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Attach (Remote Debug)",
            "type": "python",
            "request": "attach",
            "port": 10204,
            "host": "163.10.17.12",
            "pathMappings": [{
                "localRoot": "${workspaceFolder}",
                "remoteRoot": "/"
            }]
        },
        {
            "name": "Python: Flask (0.11.x or later)",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "sileg.api.rest.main",
                "LC_ALL": "es_AR.utf-8",
                "LANG": "es_AR.utf-8"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--host=0.0.0.0",
                "--port=10202"
            ]
        }

    ]
}